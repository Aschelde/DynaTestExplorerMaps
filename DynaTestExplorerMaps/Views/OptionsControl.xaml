<UserControl x:Class="DynaTestExplorerMaps.Views.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynaTestExplorerMaps.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Distance of mean measurement:"/>
        <Slider x:Name="slider" Minimum="{Binding MinMeasurementIntervalDistance}" Maximum="{Binding MaxMeasurementIntervalDistance}" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
        <TextBlock x:Name="SliderValueText" Text="{Binding MinMeasurementIntervalDistance}"/>
        
        <TextBlock Text="Measurements:"/>
        <StackPanel>
            <RadioButton Content="IRI" GroupName="MeasurementType"/>
            <RadioButton Content="DMI" GroupName="MeasurementType"/>
        </StackPanel>
    </StackPanel>
</UserControl>
