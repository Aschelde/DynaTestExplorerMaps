<UserControl x:Class="DynaTestExplorerMaps.Views.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynaTestExplorerMaps.Views"
             xmlns:viewmodels="clr-namespace:DynaTestExplorerMaps.ViewModels" 
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d">

    <Grid>
        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <esri:MapView x:Name="MainMapView"
                    Map="{Binding Map}"
                    GraphicsOverlays="{Binding GraphicsOverlays}" />
        </Grid>
    </Grid>
</UserControl>
